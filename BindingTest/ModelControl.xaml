<UserControl x:Class="BindingTest.ModelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BindingTest"
             mc:Ignorable="d" x:Name="root" Background="White"
             d:DesignHeight="100" d:DesignWidth="200">
    <GroupBox Header="{Binding Header, ElementName=root}">
        <StackPanel>
            <TextBlock Text="{Binding ElementName=root, Path=ActiveModel.Name}"></TextBlock>
            <RadioButton GroupName="GRP" Content="Prop1" IsChecked="{Binding ElementName=root, Path=ActiveModel.prop1}"></RadioButton>
            <RadioButton GroupName="GRP" Content="Prop2" IsChecked="{Binding ElementName=root, Path=ActiveModel.prop2}"></RadioButton>
        </StackPanel>
    </GroupBox>
</UserControl>
