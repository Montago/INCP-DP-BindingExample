<Window x:Class="BindingTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BindingTest"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="450"
        Height="275"
        d:DataContext="{d:DesignInstance Type=local:ViewModel}"
        mc:Ignorable="d">
    <Grid>

        <local:ModelList Width="214"
                         Height="224"
                         Margin="10,10,0,0"
                         Models="{Binding Models, Mode=TwoWay}"
                         SelectedModel="{Binding SelectedModel, Mode=TwoWay}"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top" />

        <local:ModelControl Width="150"
                            Height="80"
                            Margin="229,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ActiveModel="{Binding SelectedModel, Mode=TwoWay}"
                            Header="{Binding SelectedModel.Name}" />
    </Grid>
</Window>
