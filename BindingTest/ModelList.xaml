<UserControl x:Class="BindingTest.ModelList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BindingTest"
             d:DataContext="{d:DesignInstance Type=local:ModelList}"
             x:Name="root"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="200" d:DesignWidth="300">
    <GroupBox Header="Models">
        <ListView ItemsSource="{Binding ElementName=root, Path=Models}"
                  SelectedItem="{Binding ElementName=root, Path=SelectedModel}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </GroupBox>
</UserControl>
